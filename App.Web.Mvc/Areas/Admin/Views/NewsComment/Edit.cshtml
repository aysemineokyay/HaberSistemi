@model NewsCommentUpdateDto
		<h1 class="text-center">Yorum Düzenle</h1>
<div class="row">
	<div class="col-md-4 offset-4 mt-5">


		<form asp-action="Edit" >
			<div asp-validation-summary="ModelOnly" class="text-danger">
			</div>
			<input type="hidden" asp-for="@Model.Id " />
			<input type="hidden" asp-for="@Model.NewsId " />		
			<div class="form-group">
				<label asp-for="@Model.Comment" class="control-label">Comment</label>
				<textarea asp-for="@Model.Comment" class="form-control" rows="3"></textarea>
				<span asp-validation-for="@Model.Comment" class="text-danger"></span>
			</div>		
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="@Model.IsDeleted" /> Silindi Mi?
				</label>
			</div>
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="@Model.IsActive" /> Aktif Mi?
				</label>
			</div>

			<div class="form-group">
				<a class="btn btn-danger " asp-area="Admin" asp-action="Index" asp-controller="NewsComment"><span class="fas fa-times"></span> Cancel</a>
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
