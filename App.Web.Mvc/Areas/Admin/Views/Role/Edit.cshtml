@model RoleUpdateDto

<h1 class="text-center mb-5">Rol Güncelle</h1>
<div class="row">
	<div class="col-md-4 offset-4 ">

		<form asp-action="Edit">
			<input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
			<div asp-validation-summary="ModelOnly" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;"></div>
			<input asp-for="Id" type="hidden" />
			<div class="form-group">
				<label asp-for="Name"></label>
				<input class="form-control" asp-for="Name" placeholder="Lütfen bir rol giriniz." />
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>
			<div class="form-group mt-5">
				<a class="btn btn-danger " asp-area="Admin" asp-action="Index" asp-controller="Role"><span class="fas fa-times"></span> İptal</a>
				<input type="submit" class="btn btn-primary" value="Kaydet" />
			</div>
		</form>




	</div>
</div>