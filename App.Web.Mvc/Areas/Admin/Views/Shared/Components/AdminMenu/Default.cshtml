@model App.Web.Mvc.Areas.Admin.Models.UserAndRolesViewModel

<div id="layoutSidenav_nav">
	<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
		<div class="sb-sidenav-menu">
			<div class="nav">

				@if (Model.Roles.Any(t => t.Equals("Admin")) || Model.Roles.Any(t=>t.Equals("Moderator")))
				{
				<div class="sb-sidenav-menu-heading">MENÜ</div>
					<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="fas fa-arrow-circle-left"></i></div>
						Home Page
					</a>
					<a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
						Dashboard
					</a>
					<div class="sb-sidenav-menu-heading">İÇERİKLER</div>
					<a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="fas fa-th-list"></i></div>
						Kategoriler
					</a>
					<a class="nav-link" asp-area="Admin" asp-controller="News" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="fas fa-file-alt"></i></div>
						Haberler
					</a>
					<a class="nav-link" asp-area="Admin" asp-controller="NewsComment" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="fas fa-comments"></i></div>
						Yorumlar
					</a>
					<div class="sb-sidenav-menu-heading">KULLANICILAR</div>
					<a class="nav-link" asp-area="Admin" asp-controller="Role" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
						Roller
					</a>
					<a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
						Kullanıcılar
					</a>
					<div class="sb-sidenav-menu-heading">PAGE</div>
					<a class="nav-link" asp-area="Admin" asp-controller="Page" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="fas fa-paste"></i></div>
						Sayfalar
					</a>
					<a class="nav-link" asp-area="Admin" asp-controller="Contact" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="far fa-address-book"></i></div>
						İletişim
					</a>

				}
				<div class="sb-sidenav-menu-heading">AYARLAR</div>
				<a class="nav-link" asp-area="Admin" asp-controller="Setting" asp-action="PasswordChange">
					<div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
					Şifre Değiştir
				</a>
				<a class="nav-link" asp-area="Admin" asp-controller="Setting" asp-action="UserChangeDetails">
					<div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
					Profil Ayarları
				</a>
			</div>
		</div>
		<div class="sb-sidenav-footer">
			<div class="small">Giriş Yapan Kullanıcı:</div>
			@Model.User.UserName
		</div>
	</nav>
</div>