@model UserRegisterDto
@{
	Layout = "_UserRegisterLayout";
	ViewBag.Title = "Register";
}
@section ScriptsRegister{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-7">
			<div class="card shadow-lg border-0 rounded-lg mt-5">
				<div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
				<div class="card-body">
					@if (TempData["MessageAuth"] != null)
					{
						<div class="alert alert-success mt-2 text-center" role="alert">
							@Html.Raw(TempData["MessageAuth"])
							Please return to <a asp-controller="Auth" asp-action="Login">Login</a> page.
						</div>

					}
					<form asp-action="Register" asp-controller="Auth">
						<div asp-validation-summary="ModelOnly" class="text-danger" id="validation-summary"></div>

						<div class="form-group">
							<label class="small mb-1" asp-for="UserName">Username</label>
							<input class="form-control py-4" asp-for="UserName" type="text" placeholder="Enter username" />
							<span class="text-danger" asp-validation-for="UserName"></span>
						</div>

						<div class="form-group">
							<label class="small mb-1" asp-for="Email">Email</label>
							<input class="form-control py-4" asp-for="Email" type="email" aria-describedby="emailHelp" placeholder="Enter email address" />
							<span class="text-danger" asp-validation-for="Email"></span>

						</div>
						<div class="form-row">
							<div class="col-md-6">
								<div class="form-group">
									<label class="small mb-1" asp-for="Password">Password</label>
									<input class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password" />
									<span class="text-danger" asp-validation-for="Password"></span>

								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label class="small mb-1" asp-for="RepeatPassword">Confirm Password</label>
									<input class="form-control py-4" asp-for="RepeatPassword" type="password" placeholder="Confirm password" />
									<span class="text-danger" asp-validation-for="RepeatPassword"></span>
								</div>
							</div>
						</div>
						<div class="form-group mt-4 mb-0"><button type="submit" class="btn btn-primary btn-block">Create Account</button></div>
					</form>
				</div>
				<div class="card-footer text-center">
					<div class="small"><a asp-controller="Auth" asp-action="Login">Have an account? Go to login</a></div>
				</div>
			</div>
		</div>
	</div>
</div>