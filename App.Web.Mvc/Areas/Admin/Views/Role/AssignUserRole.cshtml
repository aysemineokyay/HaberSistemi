@model UserWithRolesDto

<div class="mt-5"> 
	<div class="row">
		<div class="col-md-4 offset-4">
			<h3 class="my-5">Role assign for "@Model.UserName" </h3>
			<form asp-action="AssignUserRole" asp-controller="Role">
				<div asp-validation-summary="ModelOnly" class="text-danger">
				</div>
						<input type="hidden" asp-for="@Model.UserId " />
						<input type="hidden" asp-for="@Model.UserName " />
				@for (int i = 0; i < Model.AssignRoleToUserDtos.Count; i++)
				{


					<div class="form-group form-check">
						<input class="form-check-input" asp-for="@Model.AssignRoleToUserDtos[i].HasRole" />
						<label class="form-check-label">@Model.AssignRoleToUserDtos[i].RoleName</label>
						<input type="hidden" asp-for="@Model.AssignRoleToUserDtos[i].RoleName" />
						<input type="hidden" asp-for="@Model.AssignRoleToUserDtos[i].RoleId" />
					</div>

				}
				<div class="form-group">
					<a class="btn btn-danger " asp-area="Admin" asp-action="Index" asp-controller="User"><span class="fas fa-times"></span> İptal</a>
					<input type="submit" value="Assign Role" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>